{
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/img/(.*)",
            "dest": "/public/img/"
        },
        {
            "src": "/(css|js)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        },
        { "src": "/public/(.*)", "dest": "/public/" }
    ],
    "public": true,
    "buildCommand": "vite build",
    "outputDirectory": "public"
}
